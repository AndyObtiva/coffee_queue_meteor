@media (max-device-width: 1024px)
  html
    body
      #order_list.main-lane
        clear none

      #barista_actions, #coffee_request_form, #order_list .box
        float left !important
        clear none !important
        padding 2vh 2vw !important
        margin 2vh 2vw !important
        height 28vh !important
        max-height 28vh !important
        width 42vw !important
        max-width 42vw !important

      #stats
        float left !important
        clear none !important
        padding 2vh 2vw !important
        margin 2vh 2vw !important
        height 20vh !important
        max-height 20vh !important
        width 92vw !important
        max-width 92vw !important

      #barista_actions
        #login-buttons.login-buttons-dropdown-align-
          .login-link-and-dropdown-list.login-form-sign-in
            .login-link-text
              font-size 32px

      #coffee_request_form
        #orderForm
          .row
            white-space initial
            padding-left 3px

            input[type=text]
              margin-bottom 0px

            select, input[type=submit]
              width 100%
              max-width 100%
              border 1px solid #aaa
              margin-top 20px


          .row:nth-of-type(1)
            padding-right 6px
