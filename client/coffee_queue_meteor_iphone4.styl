@media (max-device-width: 480px)
  html
    body
      font-size 2.5rem
      background-size: auto 100vh;

      #order_list.main-lane
        clear none

      #stats, #order_list .box, #barista_actions, #coffee_request_form
        float left !important
        clear none !important
        padding 20px
        margin 20px !important
        width 90vw !important
        max-width 90vw !important

      #order_list .box
        height 90vh !important
        max-height 90vh !important

      #barista_actions
        #login-buttons.login-buttons-dropdown-align-
          .login-link-and-dropdown-list.login-form-sign-in
            .login-link-text
              font-size 32px

      #coffee_request_form
        #orderForm
          .row
            white-space initial
            padding-left 3px

            input[type=text]
              margin-bottom 0px
              font-size 40px

            select, input[type=submit]
              width 100%
              max-width 100%
              border 1px solid #aaa
              margin-top 20px
              font-size 40px


          .row:nth-of-type(1)
            padding-right 6px
