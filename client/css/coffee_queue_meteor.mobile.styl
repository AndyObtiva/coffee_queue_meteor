@media (max-device-width: 480px)
  html
    height auto
    max-height none

    body
      height auto
      max-height none
      overflow visible
      font-size 2.5rem

      .box
        overflow visible
        &.step
          max-height none

      #login-dropdown-list
        font-size 2.5rem
        // transition-property left, top, width, height, opacity, z-index
        // transition-duration 2s
        width 66vw
        left -24vw

        .additional-link-container
          display block

          .additional-link
            display block
            float none

        input[type=text]
          margin-bottom 0px
          font-size 40px

        select, input[type=submit]
          width 100%
          max-width 100%
          border 1px solid #aaa
          margin-top 20px
          font-size 40px

      #login-buttons #signup-link
        float none

      #login-buttons #forgot-password-link
        float none

      #body-content
        height auto
        max-height none
        overflow visible

      #order_list.main-lane
        clear none

      #stats, #order_list .box, #coffee_request_form
        float left !important
        clear none !important
        padding 20px
        margin 20px !important
        width 90vw !important
        max-width 90vw !important
        height auto !important

      #order_list .box
        height auto !important
        min-height 30vh !important
        max-height none !important

        table tr td
          padding 0 15px 20px

        input[type=button]
          border 1px solid #aaa
          font-size 40px

      #coffee_request_form
        #orderForm
          .row
            white-space initial
            padding-left 3px

            input[type=text]
              margin-bottom 0px
              font-size 40px
              padding-left 20px
              padding-right 20px
              width calc(100% - 40px)

            select, input[type=submit]
              width 100%
              max-width 100%
              border 1px solid #aaa
              margin-top 20px
              font-size 40px

          .row:nth-of-type(1)
            padding-right 6px
